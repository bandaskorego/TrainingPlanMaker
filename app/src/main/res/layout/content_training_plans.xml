<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.school.jakub.trainingplanmaker.controller.trainingPlan.TrainingPlans"
    tools:showIn="@layout/training_plans_activity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="24dp"
        android:text="Twoje plany treningowe"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/training_plans_activity_user_plans_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

    </ListView>


    <TextView
        android:id="@+id/training_plans_activity_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="24dp"
        android:text="Wbudowane plany treningowe"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/training_plans_activity_user_plans_list" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/training_plans_activity_default_plans_list"
        app:layout_constraintTop_toBottomOf="@id/training_plans_activity_textView"
        app:layout_constraintEnd_toEndOf="parent">


    </ListView>


</android.support.constraint.ConstraintLayout>
