            <TextView
                android:id="@+id/profile_measurement_activity_biceps_right"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="10"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@+id/profile_measurement_activity_biceps_left"
