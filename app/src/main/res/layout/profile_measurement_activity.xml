            android:layout_width="match_parent"
            android:layout_height="match_parent"
>

            <ImageView
                android:id="@+id/profile_measurement_activity_plus_weight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="@+id/profile_measurement_activity_plus_thigh_right"
                app:layout_constraintTop_toTopOf="@+id/profile_measurement_activity_minus_weight"
                app:srcCompat="@drawable/addcircle" />

            <ImageView
                android:id="@+id/profile_measurement_activity_minus_weight"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/profile_measurement_activity_weight"
                app:layout_constraintLeft_toLeftOf="@+id/profile_measurement_activity_minus_thigh_left"
                app:layout_constraintTop_toTopOf="@+id/profile_measurement_activity_weight"
