                app:layout_constraintLeft_toRightOf="@+id/profile_measurement_activity_minus_biceps_left"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/profile_measurement_activity_minus_biceps_left"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/addcircle" />

            <ImageView
                android:id="@+id/profile_measurement_activity_minus_biceps_left"
