                app:layout_constraintBottom_toBottomOf="@+id/profile_measurement_activity_thigh_left"
                app:layout_constraintLeft_toLeftOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/profile_measurement_activity_thigh_left" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Udo(p)"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/profile_measurement_activity_thigh_right"
                app:layout_constraintLeft_toLeftOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/profile_measurement_activity_thigh_right" />

